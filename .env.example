# Variáveis de ambiente para o Sistema Agropecuário
# Renomeie este arquivo para .env e configure os valores

# Configurações do Banco de Dados
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/systemagro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=systemagro
DB_USER=postgres
DB_PASSWORD=postgres123

# Configurações do Servidor
NODE_ENV=development
PORT=3001

# Configurações de Autenticação JWT
JWT_SECRET=systemagro_jwt_secret_2025_change_in_production
JWT_EXPIRES_IN=7d

# Configurações de Upload
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=.xlsx,.csv

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000

# Configurações de Log
LOG_LEVEL=info
